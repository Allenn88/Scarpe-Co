@model Shoes

<form asp-controller="Shoes" asp-action="Edit" method="post">
    <input type="hidden" asp-for="@Model.ShoesId" /><br />

    <label asp-for="@Model.Name"></label>
    <input type="text" asp-for="@Model.Name" /><br />

    <label asp-for="@Model.Description"></label>
    <input type="text" asp-for="@Model.Description" /><br />

    <label asp-for="@Model.Price"></label>
    <input type="number" asp-for="@Model.Price" /><br />

    <button class="btn btn-primary">Salva</button>
</form>